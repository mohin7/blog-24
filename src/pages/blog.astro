            </div>
            <!-- left content end -->

            <!-- right content start  -->
            <div class="right-content w-6/12">
              <!-- single blog start  -->
              {
                posts.map((post) => (
                  <a
                    href={post.url}
                    class="single-blog-card flex transition-all overflow-hidden mb-6"
                  >
                    <div class="w-4/12">
                      <img
                        src={heroImage}
                        alt=""
                        loading="lazy"
                        class="h-32 w-auto"
                      />
                    </div>
                    <div class=" px-4 w-8/12">
