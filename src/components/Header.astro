---
import { SITE_LOGO } from "../config";
import HeaderLink from "./HeaderLink.astro";
---

<header class="py-3 border-b border-black-800 fixed w-full bg-white top-0">
  <div class="container">
    <nav class="flex items-center">
      <div class="flex-1">
        <HeaderLink href="/" class="text-2xl font-bold">{SITE_LOGO}</HeaderLink>
      </div>
      <div class="flex-1">
        <nav class="flex justify-end">
          <HeaderLink href="/" class="nav-item">Home</HeaderLink>
          <HeaderLink href="/about" class="nav-item">About</HeaderLink>
          <HeaderLink href="#" class="nav-item">Project</HeaderLink>
          <HeaderLink href="/blog" class="nav-item">Blog</HeaderLink>
        </nav>
      </div>
      <div class="flex-1">
        <div class="flex justify-end">
          <HeaderLink href="#" class="button flex font-bold"
            ><span class="h-4 w-4 mr-2 flex"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                class="w-5 h-5"
              >
                <path
                  d="M10.75 2.75a.75.75 0 00-1.5 0v8.614L6.295 8.235a.75.75 0 10-1.09 1.03l4.25 4.5a.75.75 0 001.09 0l4.25-4.5a.75.75 0 00-1.09-1.03l-2.955 3.129V2.75z"
                ></path>
                <path
                  d="M3.5 12.75a.75.75 0 00-1.5 0v2.5A2.75 2.75 0 004.75 18h10.5A2.75 2.75 0 0018 15.25v-2.5a.75.75 0 00-1.5 0v2.5c0 .69-.56 1.25-1.25 1.25H4.75c-.69 0-1.25-.56-1.25-1.25v-2.5z"
                ></path>
              </svg>
            </span> Download Resume</HeaderLink
          >
        </div>
      </div>
    </nav>
  </div>
</header>
<style>
  .nav-item {
    @apply text-gray-600 hover:text-gray-900 px-3 py-2;
  }
  .button {
    @apply border text-sm text-gray-600 border-gray-500 rounded px-6 py-3 hover:text-white hover:bg-purple-900;
  }
</style>
