---
import { SITE_LOGO } from "../config";
import HeaderLink from "./HeaderLink.astro";
---

<header class="py-3 border-b border-black-800 fixed w-full bg-white top-0">
  <div class="container">
    <nav class="flex items-center">
      <div class="flex-1">
        <HeaderLink href="/" class="text-2xl font-bold">{SITE_LOGO}</HeaderLink>
      </div>
      <div class="flex-1">
        <nav class="flex justify-end">
          <HeaderLink href="/" class="nav-item">Home</HeaderLink>
          <HeaderLink href="/about" class="nav-item">About</HeaderLink>
          <HeaderLink href="#" class="nav-item">Project</HeaderLink>
          <HeaderLink href="/blog" class="nav-item">Blog</HeaderLink>
        </nav>
      </div>
      <div class="flex-1">
        <div class="flex justify-end">
          <HeaderLink href="#" class="button">Download Resume</HeaderLink>
        </div>
      </div>
    </nav>
  </div>
</header>
<style>
  .nav-item {
    @apply text-gray-600 hover:text-gray-900 px-3 py-2;
  }
  .button {
    @apply border text-sm text-gray-600 border-gray-500 rounded px-6 py-3 hover:text-white hover:bg-purple-900;
  }
</style>
