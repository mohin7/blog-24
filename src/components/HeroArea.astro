---

<section class="hero-area">
  <div class="container">
    <div
      class="mt-16 flex items-center flex-col gap-10 lg:mt-0 lg:flex-row lg:gap-28"
    >
      <div class="hero-content flex flex-col w-full gap-[4rem]">
        <div class="content-top">
          <h1 class="text-7xl font-light">
            Hi, I Am <br /><b class="font-bold">Mohin Uddin</b>
          </h1>
          <p class="text-2xl text-gray-500 my-4">
            A passionate Frontend <b class="font-medium">Developer</b> and UI/UX
            <b class="font-medium">Designer</b>
          </p>
          <div class="flex items-center">
            <a href="#" class="button text-sm font-bold hover:text-gray-200"
              >HIRE ME</a
            >
            <a
              href="#"
              class="flex text-sm bg-white px-8 py-3 underline font-bold"
              >Projects <span class="icon px-3"
                ><svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  class="w-5 h-5"
                >
                  <path
                    fill-rule="evenodd"
                    d="M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z"
                    clip-rule="evenodd"></path>
                </svg>
              </span>
            </a>
          </div>
        </div>
        <div class="content-bottom">
          <!-- cards start  -->
          <div class="cards grid grid-cols-2 gap-4">
            <div class="card">
              <h2>+84</h2>
              <p>Client on work worldwide</p>
            </div>
            <div class="card">
              <h2>Contact</h2>
              <p>hello.mohin4@gmail.com</p>

              <div class="flex gap-5 mt-8">
                <a href="#"
                  ><img
                    class="transition-all hover:grayscale"
                    width="140"
                    src="https://cdn.cdnlogo.com/logos/u/34/upwork.svg"
                    alt=""
                  />
                </a>
                <a href="#"
                  ><img
                    class="transition-all hover:grayscale"
                    width="140"
                    src="https://cdn.cdnlogo.com/logos/f/78/freelancer.svg"
                    alt=""
                  />
                </a>
              </div>
            </div>
            <div class="card">
              <h2>512</h2>
              <p>Project Completed</p>
            </div>
          </div>
          <!-- cards end  -->

          <div class="flex mt-[5rem] items-center justify-between">
            <!-- social links start -->
            <ul class="social-links">
              <li>
                <a href="#"
                  ><svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="feather feather-github"
                    ><path
                      d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
                    ></path>
                  </svg>
                </a>
              </li>
              <li>
                <a href="#"
                  ><svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="feather feather-dribbble"
                    ><circle cx="12" cy="12" r="10"></circle><path
                      d="M8.56 2.75c4.37 6.03 6.02 9.42 8.03 17.72m2.54-15.38c-3.72 4.35-8.94 5.66-16.88 5.85m19.5 1.9c-3.5-.93-6.63-.82-8.94 0-2.58.92-5.01 2.86-7.44 6.32"
                    ></path>
                  </svg>
                </a>
              </li>
              <li>
                <a href="#"
                  ><svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="feather feather-facebook"
                    ><path
                      d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
                    ></path>
                  </svg>
                </a>
              </li>
              <li>
                <a href="#"
                  ><svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="feather feather-twitter"
                    ><path
                      d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"
                    ></path>
                  </svg>
                </a>
              </li>
            </ul>
            <!-- social links end -->

            <!-- subscription form start -->
            <div
              class="subscription-form bg-white h-16 rounded-sm relative w-[25rem] -m-[11rem]"
            >
              <form action="">
                <input
                  type="email"
                  name="email"
                  id="email"
                  placeholder="Subscribe my Newsletter"
                  class="absolute top-0 left-0 w-full h-full p-4 pl-5 rounded-sm border border-gray-300 block"
                />
                <button
                  type="submit"
                  class="absolute px-5 h-14 top-1 right-1 bg-black text-white rounded-sm border"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                    class="w-5 h-5"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z"
                      clip-rule="evenodd"></path>
                  </svg>
                </button>
              </form>
              <!-- subscription form end -->
            </div>
            <!-- subscription form end -->
          </div>
        </div>
      </div>
      <div class="hero-image w-full">
        <img
          src="https://images.unsplash.com/photo-1662751577063-0f4c15d73a4d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=987&q=80"
          alt=""
        />
      </div>
    </div>
  </div>
</section>
